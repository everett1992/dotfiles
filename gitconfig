# User Info
[user]
  name = Caleb Everett
  email = calebe@amazon.com

# Settings
[core]
  autocrlf = input
  safecrlf = true
  excludesfile = ~/.gitignore
  pager = cat
[merge]
  tool = vimdiff

# Configs and Alias
[alias]
  lg = log --decorate --graph --all --oneline --color=always
  lgs = log --decorate --graph --all --oneline --color=always -5
  sh = show --name-status
  unstage = reset HEAD
  last = log -1 --name-status
  st  = status -sb

# Colors
[color]
  branch = always
  diff =   always
  status = always
	ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

# Amazon Settings
[amazon]
  append-cr-url = true
[alias]
  backup = push origin +refs/heads/*:refs/backup/calebe/*
	dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%cn\" <%ce>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
[rerere]
	enabled = true
[push]
	default = simple
