#!/bin/bash
# Starts programs I want running and calls the system specific autostart.
# ~/.autostart

system=~/.system.autostart

echo "Starting programs"
#:: start programs
xrandr --auto # screen setup
compton  &    # composition
alsactl restore & # restore audio settings

gtk-redshift & # change the color temp at night

#:: Bind keys
xmodmap .Xmodmap
xbindkeys & # Media keys
volumeicon & # Volume bindings

#:: System specific
if [ -x $system ]; then
  $system
fi
