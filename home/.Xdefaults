Xft.dpi:        95
Xft.antialias:  true
!Xft.hinting:    full
!Xft.hintstyle:  hintslight
Xft.rgba:       rgb
XTerm*termName: xterm-256color
URxvt*termName: xterm-256color

! font settings
urxvt.font:                 xft: Terminus Powerline:size=10
urxvt.boldFont:             xft: Terminus Powerline:size=10

urxvt.scrollBar:        false
urxvt.internalBorder:   5

! Clickable urls
urxvt.perl-ext-common: default,matcher,vtwheel
urxvt.urlLauncher:     /usr/bin/chrome
urxvt.matcher.button:  1

! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! False transparency
!*transparent:    true
!*background: #111111

!urxvt.tintColor:        white
!urxvt.shading:          10

! True transparency
!urxvt*depth: 32
!urxvt*background: rgba:1111/1111/1111/eeee

urxvt.pointerColor:     black
urxvt.pointerColor2:    #d9d9d9


